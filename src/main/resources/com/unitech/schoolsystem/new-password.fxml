<AnchorPane prefHeight="471.0" prefWidth="775.0" stylesheets="@design.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unitech.schoolsystem.NewPasswordController">
    <AnchorPane fx:id="newPasswordForm" layoutX="53.0" layoutY="71.0" prefHeight="375.0" prefWidth="670.0" styleClass="white-bg" stylesheets="@design.css">
        <Label layoutX="97.0" layoutY="35.0" text="Enter Username">
            <font>
                <Font name="Tahoma" size="17.0" />
            </font>
        </Label>
        <TextField fx:id="newPasswordUsername" layoutX="97.0" layoutY="67.0" prefHeight="31.0" prefWidth="305.0" promptText="enter username here">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <Label layoutX="97.0" layoutY="110.0" text="New Password">
            <font>
                <Font name="Tahoma" size="17.0" />
            </font>
        </Label>
        <TextField fx:id="newPassword" layoutX="96.0" layoutY="145.0" prefHeight="31.0" prefWidth="305.0" promptText="enter new password here">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <Label layoutX="98.0" layoutY="188.0" text="Confirm New Password">
            <font>
                <Font name="Tahoma" size="17.0" />
            </font>
        </Label>
